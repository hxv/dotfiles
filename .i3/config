client.unfocused        $color_inactive_bg   $color_inactive_bg   $color_inactive   $color_inactive_bg   $color_inactive_bg
client.focused_inactive $color_inactive_2_bg $color_inactive_2_bg $color_inactive_2 $color_inactive_2_bg $color_inactive_2_bg
client.urgent           $color_urgent_bg     $color_urgent_bg     $color_urgent     $color_urgent_bg     $color_urgent_bg
client.placeholder      $color_bg            $color_bg            $color_bg         $color_bg            $color_bg
