# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym Left resize shrink width 5 px or 1 ppt
        bindsym Up resize grow height 5 px or 1 ppt
        bindsym Down resize shrink height 5 px or 1 ppt
        bindsym Right resize grow width 5 px or 1 ppt
        bindsym Shift+Left resize shrink width 25 px or 5 ppt
        bindsym Shift+Up resize grow height 25 px or 5 ppt
        bindsym Shift+Down resize shrink height 25 px or 5 ppt
        bindsym Shift+Right resize grow width 25 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $color #b9c0c9
set $color_bg #0c131c
set $color_active #b9c0c9
set $color_active_bg #3f6e9e
set $color_inactive #b9c0c9
set $color_inactive_bg #0c131c
set $color_inactive_2 #b9c0c9
set $color_inactive_2_bg #444444
set $color_urgent #b9c0c9
set $color_urgent_bg #9b0000
set $color_binding_mode #b9c0c9
set $color_binding_mode_bg #560052

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    colors {
        background $color_bg
        statusline $color
        separator  $color
#       name               border             bg                 text
        focused_workspace  $color_active_bg       $color_active_bg       $color_active
        inactive_workspace $color_inactive_bg     $color_inactive_bg     $color_inactive
        urgent_workspace   $color_urgent_bg       $color_urgent_bg       $color_urgent
        binding_mode       $color_binding_mode_bg $color_binding_mode_bg $color_binding_mode
#        active_workspace   #000000 #000000 #000000
    }
    status_command ~/bin/status_bar
}

focus_follows_mouse no
force_display_urgency_hint 500 ms

new_window normal
new_float pixel 4
hide_edge_borders both

client.focused          $color_active_bg     $color_active_bg     $color_active     $color_active_bg     $color_active_bg
client.unfocused        $color_inactive_bg   $color_inactive_bg   $color_inactive   $color_inactive_bg   $color_inactive_bg
client.focused_inactive $color_inactive_2_bg $color_inactive_2_bg $color_inactive_2 $color_inactive_2_bg $color_inactive_2_bg
client.urgent           $color_urgent_bg     $color_urgent_bg     $color_urgent     $color_urgent_bg     $color_urgent_bg
client.placeholder      $color_bg            $color_bg            $color_bg         $color_bg            $color_bg
#
client.background       $color_bg

