# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym Left resize shrink width 5 px or 1 ppt
        bindsym Up resize grow height 5 px or 1 ppt
        bindsym Down resize shrink height 5 px or 1 ppt
        bindsym Right resize grow width 5 px or 1 ppt
        bindsym Shift+Left resize shrink width 25 px or 5 ppt
        bindsym Shift+Up resize grow height 25 px or 5 ppt
        bindsym Shift+Down resize shrink height 25 px or 5 ppt
        bindsym Shift+Right resize grow width 25 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $color #bbbbbb
set $color_bg #1c1f21
set $color_active #bbbbbb
set $color_active_bg #515658
set $color_inactive #bbbbbb
set $color_inactive_bg #1c1f21
set $color_inactive_2 #bbbbbb
set $color_inactive_2_bg #3c3f41
set $color_urgent #1c1f21
set $color_urgent_bg #FF6B68
set $color_binding_mode #1c1f21
set $color_binding_mode_bg #AE8ABE

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    colors {
        background $color_bg
        statusline $color
        separator  $color
#       name               border             bg                 text
        focused_workspace  $color_active_bg       $color_active_bg       $color_active
        inactive_workspace $color_inactive_bg     $color_inactive_bg     $color_inactive
        urgent_workspace   $color_urgent_bg       $color_urgent_bg       $color_urgent
        binding_mode       $color_binding_mode_bg $color_binding_mode_bg $color_binding_mode
#        active_workspace   #000000 #000000 #000000
    }
    status_command ~/bin/status_bar
}

